# -- - Post-Install - -- #
resexec("scripts/clean_tmp.sh");
ini_set("text_next", "Finish");
checkviewbox(
  "<~install.finish.title>", "<#selectbg_g><b><~finish.title></b></#>\n\n" + "<b><~finish.msg></b>\n\n" + "", "@finish",

  "<~finish.reboot>", "0", "reboot_it");

# -- - REBOOT - -- #
if
  getvar("reboot_it") == "1" then reboot("onfinish");
endif;
